@model exemploApp.Dominio.Entidades.EntidadesControleSistema.Menu

@using Tykon.Web.Helpers
@using Tykon.Web.Models;
@using exemploApp.Dominio.Entidades.EntidadesControleSistema;
@using System.Web.Mvc.Html;
@using System.Linq


@Html.HiddenFor(x => x.Id)
@Html.HiddenFor(x => x.Sistema.Id)
@Html.HiddenFor(x => x.StatusMenu)
@Html.FWTextBoxGrupo(x => x.Sistema.NomeSistema, "Sistema", true, FWTamanho.Cinco, "NomeSistema", null, true)
@Html.FWComboBoxGrupo(x => x.Modulo.Id, "Módulo", true, "Id", "NomeModulo", (System.Collections.IEnumerable)ViewBag.Modulos, false, FWTamanho.Cinco, "Modulo", "Selecione...")
@Html.FWTextBoxGrupo(x => x.NomeMenu, "Nome do Menu", true, FWTamanho.Cinco, "NomeMenu", null, false)
@Html.FWTextBoxGrupo(x => x.LogoMenu, "Logo", true, FWTamanho.Cinco, "LogoMenu", null, false)
@Html.FWTextBoxGrupo(x => x.OrdemMenu, "Posição", true, FWTamanho.Cinco, "OrdemMenu", null, false, null, null, false, true)
